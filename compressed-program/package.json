    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.29.0",
    "@lightprotocol/stateless.js": "^0.14.1",
    "@solana/web3.js": "^1.95.3"
  },
