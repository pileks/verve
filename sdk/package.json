{
  "name": "@verve/sdk",
  "version": "1.0.0",
  "description": "Verve SDK",
  "author": "Verve",
  "license": "AGPL-3.0-only",
  "exports": {
    "types": "./lib/types/*.d.ts",
    "require": "./lib/cjs/*.js",
    "import": "./lib/esm/*.js",
    "default": "./lib/esm/*.js"
  },
  "files": [
    "src/",
    "lib/"
  ],
  "scripts": {
    "clean": "shx rm -rf lib",
    "reset": "shx rm -rf node_modules && yarn",
    "package": "shx mkdir -p lib/cjs && shx mkdir -p lib/esm && shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json && shx echo '{ \"type\": \"module\" }' > lib/esm/package.json",
    "build": "yarn clean && tsc --build --verbose && yarn package"
  },
  "dependencies": {
    "@solana/web3.js": "^1.78.4"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "shx": "^0.3.4",
    "typescript": "^5.6.3"
  }
}