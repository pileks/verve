{
  "name": "@verve/sdk",
  "version": "1.0.0",
  "description": "Verve SDK",
  "author": "Verve",
  "license": "AGPL-3.0-only",
  "exports": {
    "types": "./lib/types/*.d.ts",
    "require": "./lib/cjs/*.js",
    "import": "./lib/esm/*.js",
    "default": "./lib/esm/*.js"
  },
  "files": [
    "src/",
    "lib/"
  ],
  "scripts": {
    "clean": "shx rm -rf lib",
    "reset": "shx rm -rf node_modules && yarn",
    "package:cjs": "shx mkdir -p lib/cjs && shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
    "package:esm": "shx mkdir -p lib/esm && shx echo '{ \"type\": \"module\" }' > lib/esm/package.json",
    "package": "yarn package:cjs && yarn package:esm",
    "build": "yarn clean && tsc --build --verbose && yarn package",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitest/coverage-istanbul": "2.1.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "shx": "^0.3.4",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.4"
  }
}